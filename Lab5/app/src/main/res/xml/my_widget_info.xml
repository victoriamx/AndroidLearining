<?xml version="1.0" encoding="utf-8"?>
<appwidget-provider xmlns:android="http://schemas.android.com/apk/res/android"
    android:initialKeyguardLayout="@layout/my_widget"
    android:initialLayout="@layout/my_widget"
    android:minHeight="40dp"
    android:minWidth="300dp"
    android:previewImage="@mipmap/shoplist"
    android:resizeMode="horizontal|vertical"
    android:updatePeriodMillis="86400000"
    android:widgetCategory="home_screen"/>

<!--
initialKeyguardLayout:指向定义widget显示在键盘锁界面的布局资源
initialLayout：指向定义widget在主屏幕的布局资源
previewImage：启动器图标
widgetCategory：确定小部件是否可以显示在主屏幕/键盘保护
-->